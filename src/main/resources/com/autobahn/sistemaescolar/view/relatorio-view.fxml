<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.autobahn.sistemaescolar.controller.RelatorioController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="20.0"
              AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0"
              AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">

            <Label styleClass="titulo-pagina" text="Relatórios e Estatísticas" />

            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-background-radius: 5; -fx-border-color: #E0E0E0;">
                <children>
                    <Label text="Selecione o Tipo de Relatório:">
                        <font><Font name="Segoe UI Bold" size="16.0" /></font>
                    </Label>
                    <ComboBox fx:id="cbTipoRelatorio" prefWidth="300.0" promptText="Escolha uma opção..." />

                    <HBox HBox.hgrow="ALWAYS" />

                    <Button fx:id="btnExportarPdf" mnemonicParsing="false" onAction="#handleExportarPdf"
                            style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                            text="Baixar PDF" />
                </children>
            </HBox>

            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <Label fx:id="lblDescricao" text="Resultados do Relatório">
                    <font><Font name="Segoe UI Bold" size="14.0" /></font>
                </Label>

                <TableView fx:id="tabelaRelatorio" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCategoria" prefWidth="200.0" text="Categoria / Grupo" />
                        <TableColumn fx:id="colQuantidade" prefWidth="100.0" text="Qtd." style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colAlunos" prefWidth="700.0" text="Alunos Listados" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </children>
</AnchorPane>